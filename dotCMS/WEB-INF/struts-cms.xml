<!DOCTYPE struts-config PUBLIC
      "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd" >
<struts-config>
        <!-- BEGIN PLUG-INS -->
        <!-- END PLUG-INS -->
<form-beans>
		<form-bean name="loginForm" type="com.dotmarketing.cms.login.struts.LoginForm" />
		<form-bean name="inquiryForm" type="com.dotmarketing.cms.inquiry.struts.InquiryForm" />
		<form-bean name="contactUsForm" type="com.dotmarketing.cms.inquiry.struts.InquiryForm" />
		<form-bean name="contactUsFormExt" type="com.dotmarketing.cms.inquiry.struts.InquiryForm" />
		<form-bean name="forgotPasswordForm" type="com.dotmarketing.cms.forgotpassword.struts.ForgotPasswordForm" />
		<form-bean name="myAccountForm" type="com.dotmarketing.cms.myaccount.struts.MyAccountForm" />
		<!-- same form as above, different name and validation.  Tricky, tricky... -->
		<form-bean name="addressForm" type="com.dotmarketing.cms.myaccount.struts.MyAccountForm" />
		<form-bean name="createAccountForm" type="com.dotmarketing.cms.createaccount.struts.CreateAccountForm" />
		<form-bean name="eventRegistrationForm" type="com.dotmarketing.portlets.events.struts.EventRegistrationForm" />
		<form-bean name="mailingListsSubscribeForm" type="com.dotmarketing.cms.subscribe.struts.MailingListsSubscribeForm" />
		<form-bean name="JobsForm" type="com.dotmarketing.portlets.jobs.struts.JobsForm"></form-bean>
		<form-bean name="dotRegistrationForm" type="com.dotmarketing.cms.registration.struts.RegistrationForm"></form-bean>		
		<form-bean name="creditCardForm" type="com.dotmarketing.cms.creditcard.form.CreditCardForm"></form-bean>	
		<form-bean name="webForm" type="com.dotmarketing.portlets.webforms.struts.WebForm"></form-bean>
		<!--  Order Manager -->
		<form-bean name="webEventRegistrationForm" type="com.dotmarketing.portlets.event_registrations.struts.WebEventRegistrationForm"></form-bean>		
		<form-bean name="productsForm" type="com.dotmarketing.cms.product.struts.ProductsForm"></form-bean>
		<form-bean name="orderForm" type="com.dotmarketing.portlets.order_manager.struts.OrderForm"></form-bean>
		<form-bean name="CreditCardTestForm" type="com.dotmarketing.cms.creditcard.struts.CreditCardTestForm"></form-bean>
		<form-bean name="commentsForm" type="com.dotmarketing.cms.comment.struts.CommentsForm"></form-bean>		
		<form-bean name="calendarEventForm" type="com.dotmarketing.portlets.calendar.cms.struts.EventForm"></form-bean>
		<form-bean name="sendVCalendarDetailForm" type="com.dotmarketing.portlets.events.struts.SendVCalendarDetailForm"></form-bean>		
		<form-bean name="calendarReminderForm" type="com.dotmarketing.portlets.calendar.struts.CalendarReminderForm"></form-bean>
		<!-- BEGIN FORM-BEANS -->
		<!-- END FORM-BEANS -->		
</form-beans>
    <!--  Action Mapping Definitions  -->
    <action-mappings>
    
       <action path="/comments"  type="com.dotmarketing.cms.comment.action.CommentsAction" name="commentsForm" scope="request" validate="false"	parameter="dispatch" >
       </action>
       
       
<action path="/submitContent"  type="com.dotmarketing.cms.content.submit.action.SubmitContentAction" scope="request" validate="false" parameter="dispatch" >
	</action>
        <action path="/login"  type="com.dotmarketing.cms.login.action.LoginAction" name="loginForm" scope="request" validate="false"	parameter="dispatch" input="/application/login/login.dot" >
			<forward name="loginPage" path="/application/login/login.dot" />
			<forward name="forgotPasswordPage" path="/application/login/forgot_password.dot" />
			<forward name="challengeQuestionPage" path="/application/login/challenge_question.dot" />
			<forward name="successPage" path="/application/login/login_successful.dot" />
			<forward name="resendActivationPage" path="/application/myaccount/resend_activation_email.dot" />		
        </action>
        
        <action path="/logout"   type="com.dotmarketing.cms.login.action.LogoutAction" parameter="dispatch" >
			<forward name="afterLogoutPage" path="/" redirect="true" />
        </action>
        <action path="/inquiry"  type="com.dotmarketing.cms.inquiry.action.InquiryAction" name="inquiryForm" scope="request" validate="false"	parameter="dispatch" input="/help_desk/inquiry.dot" >
			<forward name="inquiryPage" path="/help_desk/inquiry.dot" />
			<forward name="thankYouPage" path="/help_desk/thank_you.dot" />
        </action>
        <action path="/contactUs"  type="com.dotmarketing.cms.contactus.action.ContactUsAction" name="contactUsForm" scope="request" validate="false"	parameter="dispatch" input="/help_desk/contact_us.dot" >
			<forward name="contactUsPage" path="/contact/index.dot" />
			<forward name="thankYouPage" path="/contact/thank_you.dot" />
        </action>
        
        <action path="/contactUsExt"  type="com.dotmarketing.cms.contactus.action.ContactUsExtAction" name="contactUsFormExt" scope="request" validate="false"	parameter="dispatch" input="/home/contact_us.dot" >
			<forward name="contactUsPage" path="/home/index.dot" />
			<forward name="thankYouPage" path="/home/thank_you.dot" />
        </action>
        
		<!--
			This is forgot password action by default resets the password
			with a random one and send it through email to the given email address
			but if the USE_CHALLENGE_QUESTION property is set to true 
			then the user is requested to answer
			his challenge question before the email with the random password is send
			or if the USE_RESET_PASSWORD_EMAIL property is set to true 
			an email with a reset password that contains the acckey encrypted is sent to 
			the user to return to the site to reset the password
		 -->
        <action path="/forgotPassword"  type="com.dotmarketing.cms.forgotpassword.action.ForgotPasswordAction" name="forgotPasswordForm" scope="request" validate="false"	parameter="dispatch" input="/application/login/forgot_password.dot" >
			
			<forward name="forgotPasswordPage" path="/application/login/forgot_password.dot" />
			<forward name="challengeQuestionPage" path="/application/login/challenge_question.dot" />
			<forward name="resetPasswordPage" path="/application/login/reset_password.dot" />
			
			<forward name="resendActivationPage" path="/application/myaccount/resend_activation_email.dot" redirect="true" />		
			<forward name="passwordChangeConfirmationPage" path="/application/login/reset_password_confirmation.dot" redirect="true" />		
			<forward name="emailSentConfirmationPage" path="/application/login/reset_password_email_sent.dot" redirect="true" />		
			<forward name="loginPage" path="/application/login/login.dot" />
        </action>
		<!-- Account Activation - This is used when the accounts are created inactive -->
		<action path="/activateAccount" type="com.dotmarketing.cms.myaccount.action.AccountActivationAction" scope="request" parameter="dispatch">
			<forward name="myAccountPage" path="/application/myaccount/my_account.dot" />
			<forward name="resendActivationPage" path="/application/myaccount/resend_activation_email.dot" />		
			<forward name="confirmation" path="/dotCMS/login" redirect="true" />		
			<forward name="loginPage" path="/application/login/login.dot" />
		</action>
		<!-- Account Activation -->
       <action path="/myAccount"  type="com.dotmarketing.cms.myaccount.action.MyAccountAction" name="myAccountForm" scope="request" validate="false" parameter="dispatch" input="/application/myaccount/my_account.dot" >
			<forward name="myAccountPage" path="/application/myaccount/my_account.dot" />
			<forward name="editUserAddressPage" path="/application/myaccount/edit_user_address.dot" />
			<forward name="editUserOrganizationPage" path="/application/myaccount/edit_user_organization.dot" />
			<forward name="editUserCategoriesPage" path="/application/myaccount/edit_user_categories.dot" />
        </action>
       <action path="/editInterests"  type="com.dotmarketing.cms.myaccount.action.MyInterestsAction" name="myAccountForm" scope="request" validate="false" parameter="dispatch" input="/application/myaccount/my_interests.dot" >
			<forward name="myInterestsPage" path="/application/myaccount/my_interests.dot" />
        </action>
        <action path="/address"  type="com.dotmarketing.cms.myaccount.action.AddressAction" name="addressForm" scope="request" validate="false"	parameter="dispatch" input="/global/my_account_address.dot" >
			<forward name="myAccountPage" path="/global/my_account.dot" />
			<forward name="myAccountAddressPage" path="/global/my_account_address.dot" />
        </action>
       
        <action path="/createAccount"  type="com.dotmarketing.cms.createaccount.action.CreateAccountAction" name="createAccountForm" scope="request" validate="false" parameter="dispatch" input="/global/login.dot">
			<forward name="createAccount" path="/application/login/login.dot" />
			<forward name="myAccountPage" path="/dotCMS/myAccount" redirect="true"/>
        </action>
                
        <action path="/registerToEvent"  type="com.dotmarketing.portlets.events.action.EventRegistrationAction" name="eventRegistrationForm" scope="request" validate="false"	parameter="dispatch" input="/calendar/event_registration.dot" >
			<forward name="eventRegistrationPage" path="/calendar/event_registration.dot" />
			<forward name="registrationSuccessfulPage" path="/calendar/event_registration_thank_you.dot" />
        </action>
        <action path="/subscribe" type="com.dotmarketing.cms.subscribe.action.MailingListsSubscribeAction"  name="mailingListsSubscribeForm" scope="request" validate="false"	parameter="dispatch" input="/application/myaccount/mailinglists_subscription.dot">
			<forward name="subscribePage" path="/application/myaccount/mailinglists_subscription.dot" />
        </action>
		<action path="/processCreditCard" type="com.dotmarketing.cms.creditcard.CreditCardAction" parameter="dispatch" name="creditCardForm">
        </action>
		<!-- Send Email -->
		<action path="/submitWebForm" type="com.dotmarketing.cms.webforms.action.SubmitWebFormAction" parameter="dispatch" name="webForm">
			<forward name="thankYouPage" path="/" />
		</action>
		<action path="/sendEmail" type="com.dotmarketing.cms.webforms.action.SubmitWebFormAction" parameter="dispatch" name="webForm">
			<forward name="thankYouPage" path="/global/thankyou.dot" />
		</action>
		<action path="/sendArticleEmail" type="com.dotmarketing.cms.sendtofriend.action.SendArcticleToFriendAction" parameter="dispatch" name="webForm">
			<forward name="thankYouPage" path="/global/thankyou.dot" />
		</action>
		<!-- Send Email -->
		
		 <action path="/redirectBanners"  type="com.dotmarketing.portlets.banners.cms.action.RedirectBannerAction">
        </action>
        
        <!-- CalendarReminder -->
		<action path="/calendarReminder" type="com.dotmarketing.portlets.calendar.cms.action.CalendarReminderAction" parameter="dispatch" name="calendarReminderForm">
			<forward name="thankYouPage" path="/home/index.dot" />
		</action>
		
		<!-- End Calendar Reminder -->
        
        
        <!-- Download Files -->
        <action path="/downloadFiles"  type="com.dotmarketing.cms.downloadfiles.action.DownloadFilesAction" parameter="dispatch">
		</action>
        <!-- Download Files -->
		<!-- LIST PRODUCT -->
		<action path="/featuredProducts"  type="com.dotmarketing.cms.product.action.FeaturedProductAction" name="productsForm" scope="request" validate="false" parameter="dispatch" >
			<forward name="featuredProducts" path="/application/products/featured_products.dot" />
		</action>
		
		<action path="/listProducts"  type="com.dotmarketing.cms.product.action.ListProductAction" name="productsForm" scope="request" validate="false" parameter="dispatch" >
			<forward name="listProducts" path="/application/products/list_products.dot" />
		</action>
		
		<action path="/detailProduct"  type="com.dotmarketing.cms.product.action.DetailProductAction" name="productsForm" scope="request" validate="false" parameter="dispatch" >
			<forward name="detailProduct" path="/application/products/detail_product.dot" />
			<forward name="detailProductBulk" path="/application/products/detail_product.dot" />
		</action>
		
		<action path="/addToCart"  type="com.dotmarketing.cms.product.action.AddToCartAction" name="productsForm" scope="request" validate="false" parameter="dispatch" >
			<forward name="viewCart" path="/application/products/shopping_cart.dot" />
		</action>
		
		<action path="/viewCart"  type="com.dotmarketing.cms.product.action.ViewCartAction" name="CartForm" scope="request" validate="false" parameter="dispatch" >
			<forward name="viewCart" path="/application/products/shopping_cart.dot" />
		</action>
		
		<action path="/checkOutCart"  type="com.dotmarketing.cms.product.action.CheckOutAction" name="orderForm" scope="request" validate="false" parameter="dispatch" input="/application/products/check_out.dot">
			<forward name="viewCart" path="/application/products/shopping_cart.dot" />
			<forward name="checkOut" path="/application/products/check_out.dot" />
			<forward name="registrantInfoPage" path="/dotCMS/addRegistration" />
			<forward name="reviewOrder" path="/dotCMS/reviewOrder" />
		</action>
		
		<action path="/reviewOrder"  type="com.dotmarketing.cms.product.action.ReviewOrderAction" name="orderForm" scope="request" validate="false" parameter="dispatch" input="/application/products/review_order.dot">
			<forward name="reviewOrder" path="/application/products/review_order.dot" />
			<forward name="checkOut" path="dotCMS/checkOutCart" />
		</action>
		
		
<action path="/purchaseOrder"  type="com.dotmarketing.cms.product.action.PurchaseAction" name="orderForm" scope="request" validate="false" parameter="dispatch" input="/application/products/review_order.dot">
			<forward name="invoice" path="/application/products/invoice.dot" redirect="true"/>
			<forward name="invoiceEmail" path="/application/products/invoice_email.dot"/>			
		</action>
		<!-- END LIST PRODUCT -->
		<!-- REGISTRATION -->
		<action path="/addFacility" type="com.dotmarketing.cms.registration.action.AddFacilityAction" name="dotRegistrationForm" input="/facility/facility.dot" validate="false" scope="request" parameter="dispatch">
			<forward name="open" path="/application/registration/facility.dot" />			
			<forward name="fail" path="/application/registration/facility.dot" />
			<forward name="success" path="/application/registration/facility.dot?callback=true" />
		</action>
		<action path="/addRegistration" type="com.dotmarketing.cms.registration.action.RegisterAction" name="dotRegistrationForm" input="/registry/registry.dot" validate="false" scope="request" parameter="dispatch">
			<forward name="open" path="/application/registration/registration.dot" />			
			<forward name="fail" path="/application/registration/registration.dot" />
			<forward name="success" path="/application/registration/registration.dot" />
			<forward name="activation_email_message" path="/application/registration/activation_email_message.dot" />
			<forward name="confirmation" path="/application/registration/confirmation.dot" />		
		</action>	
		<!-- END REGISTRATION -->
		<!--  web event registrations -->
        <action path="/eventRegistration"  type="com.dotmarketing.portlets.event_registrations.cms.action.WebEventRegistrationAction" name="webEventRegistrationForm" scope="session" validate="false" parameter="dispatch" >
			<forward name="upcommingEvents" path="/conferences_events/upcoming_institutes.dot" redirect="true" />
			<forward name="registrantInfoPage" path="/dotCMS/addRegistration" />
			<forward name="step1" path="/application/webevents/webevent_registration_step1.dot" />
			<forward name="step2" path="/application/webevents/webevent_registration_step2.dot" />
			<forward name="creditCardConfirmation" path="/application/webevents/webevent_registration_confirmation_cc.dot" redirect="true" />
			<forward name="checkConfirmation" path="/application/webevents/webevent_registration_confirmation_check.dot" redirect="true" />
			<forward name="creditCardConfirmationEmail" path="/application/webevents/webevent_registration_confirmation_cc_email.dot" />
			<forward name="checkConfirmationEmail" path="/application/webevents/webevent_registration_confirmation_check_email.dot" />
			<forward name="webinarCCConfirmation" path="/application/webevents/webinar_registration_confirmation.dot" redirect="true" />
			<forward name="webinarCCConfirmationEmail" path="/application/webevents/webinar_registration_confirmation_email.dot" />
			<forward name="webinarCheckConfirmation" path="/application/webevents/webinar_registration_check_confirmation.dot" redirect="true" />
			<forward name="webinarCheckConfirmationEmail" path="/application/webevents/webinar_registration_check_confirmation_email.dot" />
        </action>
        
        <action path="/webEventComments" forward="/conferences_events/comments_testimonials.dot">
		</action>
		<!--  End web events registrations -->
		
		<!-- Test CC -->
		<action path="/testCC" type="com.dotmarketing.cms.creditcard.action.CreditCardTestAction" name="CreditCardTestForm" scope="session" validate="false" parameter="dispatch">
			<forward name="success" path="/home/testcc.dot" />
			<forward name="failure" path="/home/testcc.dot" />
		</action>
		<!-- END Test CC-->		
		
       <action path="/registrationHistoryDetail" type="com.dotmarketing.portlets.event_registrations.cms.action.EventRegistrationDetailAction" name="webEventRegistrationForm" scope="session" validate="false" parameter="dispatch" >
       		<forward name="webEventDetailPage" path="/application/myaccount/event_registration_detail.dot" />
			<forward name="registrationHistoryPage" path="/application/myaccount/order_and_registration_history.dot" />
       </action>
       <action path="/registrationHistory" forward="/application/myaccount/order_and_registration_history.dot">
       </action>
       <action path="/productHistoryDetail" type="com.dotmarketing.portlets.product.action.ProductDetailAction" name="orderForm" scope="request" validate="false" parameter="dispatch" >
       		<forward name="productDetailPage" path="/application/myaccount/product_order_detail.dot" />
			<forward name="registrationHistoryPage" path="/application/myaccount/order_and_registration_history.dot" />
       </action>
       
       <!--  tests -->
       <action path="/testAction" type="com.csu.cms.tests.action.TestAction" scope="request" parameter="dispatch" >
       		<forward name="testPage" path="/test/test.dot" />
       </action>
        <!-- User Favorites -->
        <action path="/addFavorites"  type="com.dotmarketing.cms.myaccount.action.MyFavoritesAction" scope="request" parameter="dispatch">
		</action>
        <!-- User Favorites -->
		<!-- Rating Action -->
        <action path="/rateContentlet" type="com.dotmarketing.cms.rating.action.RatingAction" scope="request" validate="false" parameter="dispatch">
		</action>
		<!-- Rating Action -->
    
        <!-- Count URL Clicks  -->
        <action path="/countContentClicks" type="com.dotmarketing.cms.countcontentclicks.action.CountContentClicksAction" scope="request" validate="false" parameter="dispatch">
		</action>
        <!-- Count URL Clicks  -->
        
        <!-- Calendar Events  -->
        <action path="/addEvent" type="com.dotmarketing.portlets.calendar.cms.action.AddEvent" name="calendarEventForm" scope="request" validate="false" parameter="dispatch">
        	<forward name="addEvent" path="/calendar/add_event.dot" />
        	<forward name="viewCalendar" path="/calendar/" redirect="true" />
		</action>
		<action path="/sendVCalendarDetail" type="com.dotmarketing.portlets.events.action.SendVCalendarDetail" name="sendVCalendarDetailForm" scope="request" validate="false" parameter="dispatch">
		</action>
		<action path="/downloadVCalendar" type="com.dotmarketing.portlets.calendar.action.SendVCalendarDetail" name="sendVCalendarDetailForm" scope="request" validate="false" parameter="dispatch">
		</action>		
        <!-- Calendar Events  -->
    	<!-- BEGIN ACTIONS -->
		<!-- END ACTIONS --> 
    	    
    </action-mappings>   
</struts-config>
